        <TextBox x:Name="TextFaltasG" HorizontalAlignment="Left" Height="33" Margin="170,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" MaxLength="2" PreviewTextInput="TextFaltasG_PreviewTextInput"/>
