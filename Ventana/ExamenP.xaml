        <TextBox x:Name="TextDV" HorizontalAlignment="Left" Height="34" Margin="300,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="28" MaxLength="1" PreviewTextInput="TextDV_PreviewTextInput"/>

    </Grid>
