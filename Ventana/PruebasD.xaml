<UserControl x:Class="Ventana.PruebasD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ventana"
             xmlns:fa ="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <!--Menu Buttons-->
        <RadioButton    
                        IsChecked="True"
                        Margin="150,10,480,400">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Aprobbado" Foreground="{StaticResource color2}"/>
            </StackPanel>
        </RadioButton>
        <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color2}"
                                 Margin="400,0,200,90">
            <StackPanel Orientation="Horizontal">
                <fa:IconImage Icon="Clipboard" Style="{StaticResource menuButtonIcon}"/>
                <TextBlock Text="No Aprobado" Style="{StaticResource menuButtonText}"/>
            </StackPanel>
        </RadioButton>

    </Grid>
</UserControl>
